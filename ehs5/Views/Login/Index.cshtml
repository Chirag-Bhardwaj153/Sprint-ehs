@model ehs5.Models.Login

@{
    ViewData["Title"] = "Login";
}

<!-- Custom CSS -->
<style>
    /* General body styling */
    body {
        background-image: url('https://www.recommend.my/blog/wp-content/uploads/2018/09/f41503ef-1c65-4874-b217-ccd1cd7b713c_pasted20image200.jpg');
        background-size: cover;
        background-position: top center; /* Positioning the background at the top */
        background-attachment: fixed;
        font-family: Arial, sans-serif;
        height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        background-color: rgba(255, 255, 255, 0.8); /* Set card background to be semi-transparent */
        width: 100%;
        max-width: 400px; /* Max width to keep it from becoming too wide */
        margin-top: 30px; /* Ensure the card doesn't touch the top of the viewport */
    }

    .card-header {
        background: linear-gradient(90deg, #007bff, dimgrey); /* Blue tones */
        color: white;
        text-align: center;
        padding: 1.5rem;
        border-top-left-radius: 15px; /* Rounded top corners */
        border-top-right-radius: 15px;
    }

        .card-header h3 {
            margin: 0;
            font-weight: 600;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

    /* Form styling */
    .form-label {
        font-weight: bold;
        color: #343a40;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem; /* Space between form fields */
    }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #007bff;
        }

    /* Button styling */
    .btn-primary {
        background-color: dimgrey;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 1rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Footer */
    .card-footer {
        background-color: rgba(241, 243, 245, 0.9); /* Slight transparency for the footer */
        text-align: center;
        padding: 1rem;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

        .card-footer small {
            font-size: 0.9rem;
        }

        .card-footer a {
            color: #007bff;
            font-weight: bold;
        }

            .card-footer a:hover {
                text-decoration: underline;
            }

    /* Validation errors */
    .text-danger {
        color: #e74a3b !important;
        font-size: 0.875rem;
    }
</style>

<!-- Login Form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card Container -->
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="post">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Username Field -->
                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>
                </div>

                <!-- Card Footer with Register Link -->
                <div class="card-footer text-center py-3">
                    <small>
                        Don't have an account?
                        <a href="/Registration/Register" class="text-primary">Register here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

