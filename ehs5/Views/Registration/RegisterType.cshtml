@{
    ViewData["Title"] = "Select User Type";
    var selectedUserType = ViewData["SelectedUserType"]?.ToString();
    var userTypes = new List<string> { "Seller", "Buyer" };
}

<h2>Select Your Account Type</h2>

<form asp-action="SelectUserType" method="post">
    <div class="form-group">
        <label for="userType">Choose Account Type</label>
        <select name="userType" class="form-control" id="userType" required>
            <option value="">-- Select User Type --</option>
            @foreach (var userType in userTypes)
            {
                <option value="@userType" selected>@userType</option>
            }
        </select>
        
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>