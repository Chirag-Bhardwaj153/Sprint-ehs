<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ehs5</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ehs1.styles.css" asp-append-version="true" />
    <style>
        /* Global Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fc;  
            color: #333;
            margin: 0;
            padding: 0;
            min-height: 50vh;
            display: flex;
            flex-direction: column;
        }

        /* Header Styling */
        header {
            background-color: #1d3c6d; /* Deep Blue */
            color: #fff;
            padding: 5px 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            font-size: 1.2rem;
            font-family: 'Poppins', sans-serif;
            padding: 0 30px;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 2rem;
            color: #fff;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            padding: 5px 20px;
        }

            .navbar-nav .nav-link:hover {
                background-color: #ff6f61; /* Coral Color */
                border-radius: 5px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        /* Main Content Styling */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px;
            flex-grow: 1;
        }

        main {
            padding: 10px;
            margin-bottom: 30px;
        }

        /* Footer Styling */
        footer {
            background-color: #1d3c6d;
            color: #fff;
            padding: 5px;
            text-align: center;
            font-size: 1rem;
            margin-top: auto;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
        }

            footer a {
                color: #ff6f61;
                text-decoration: none;
                font-weight: bold;
            }

                footer a:hover {
                    text-decoration: underline;
                    color: #e04e3a;
                }

        /* Buttons */
        .btn-primary {
            background-color: #ff6f61;
            border-color: #ff6f61;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .btn-primary:hover {
                background-color: #e04e3a;
                border-color: #e04e3a;
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        .btn-secondary {
            background-color: #e2e6ea;
            color: #333;
            border: 1px solid #ddd;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .btn-secondary:hover {
                background-color: #d6d9df;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Easy Housing System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - ehs1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
